<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>BaKhabar Kisan - Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
</head>

<body class="min-h-screen bg-gray-50">
  <div class="grid md:grid-cols-3 grid-cols-1 min-h-screen container mx-auto">

    <!-- Image Area -->
    <div class="hidden bg-blue-500 md:flex items-center justify-center bg-white p-6 col-span-2">
      <img src="/assets/images/login-screen-img.png" alt="login" class="w-4xl max-w-full object-contain" />
    </div>

    <!-- Login Container -->
    <div class="bg-white w-full max-w-xl mx-auto p-6 sm:p-10 md:rounded-l-3xl flex flex-col justify-center">

      <!-- Logo and Branding -->
      <div class="text-center mb-6 sm:mb-10">
        <img src="/assets/images/logo.png" alt="logo" class="h-16 sm:h-20 mx-auto" />
        <p class="text-green-700 font-medium text-base sm:text-lg mt-2">Smart
          Farming Solutions</p>
        <p class="text-gray-600 text-xs sm:text-sm mt-1">
          Empowering farmers with knowledge & technology
        </p>
      </div>

      {{!-- Error Alert --}}
      {{#if error}}
      <div id="error-alert" class="flex items-center justify-between gap-2 bg-red-100 text-red-700 p-2 rounded mb-4">
        <div class="flex items-center gap-2">
          <i data-lucide="circle-alert" class="h-4 w-4"></i>
          <p class="text-sm">{{error}}</p>
        </div>
        <i id="close-alert-btn" data-lucide="x" class="h-4 w-4 cursor-pointer"></i>
      </div>
      {{/if}}

      <!-- Login Form -->
      <form action="/login" method="POST" class="space-y-5 sm:space-y-6">

        <!-- Username -->
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
            <i data-lucide="user" class="text-green-500 w-5 h-5"></i>
          </div>
          <input type="text" name="username" placeholder="Email / Username" required
            class="w-full pl-12 pr-3 py-2 rounded-xl border-2 border-green-200 bg-white/80 focus:outline-none focus:border-green-500 transition" />
        </div>

        <!-- Password -->
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
            <i data-lucide="lock" class="text-green-500 w-5 h-5"></i>
          </div>
          <input type="password" name="password" placeholder="Password" required
            class="w-full pl-12 pr-3 py-2 rounded-xl border-2 border-green-200 bg-white/80 focus:outline-none focus:border-green-500 transition" />
        </div>

        <!-- Hidden Field -->
        <input type="hidden" name="returnTo" value="{{returnTo}}" />

        <!-- Remember me and Forgot -->
        <div class="flex flex-row items-center justify-end text-sm gap-2 sm:gap-0">
          <a href="#" class="text-green-600 hover:text-green-800 font-medium">
            Forgot password?
          </a>
        </div>

        <!-- Submit Button -->
        <button type="submit"
          class="w-full bg-gradient-to-r from-green-500 to-green-600 text-white font-semibold py-2 rounded-xl hover:from-green-600 hover:to-green-700 transition duration-200 shadow-md">
          <span class="flex items-center justify-center">
            <i data-lucide="log-in" class="text-white w-5 h-5 mr-2"></i>
            Continue Login
          </span>
        </button>
      </form>

      <!-- Footer -->
      <div class="text-center mt-8 pt-6 border-t border-green-100 text-sm">
        <p class="text-gray-500 flex items-center justify-center">
          <i data-lucide="building" class="w-4 h-4 mr-2 text-gray-500"></i>
          BaKhabar Kisan &copy; 2024
          <span class="mx-2">â€¢</span>
          <span class="text-green-600">Farming Made Smart</span>
        </p>
        <p class="text-xs text-gray-400 mt-1">
          Supporting 10,000+ farmers across Pakistan
        </p>
      </div>
    </div>
  </div>

  <script>
    lucide.createIcons();

    const closeAlertBtn = document.getElementById("close-alert-btn");
    if (closeAlertBtn) {
      closeAlertBtn.addEventListener("click", () => {
        const alertBox = document.getElementById("error-alert");
        if (alertBox) {
          alertBox.style.display = "none";
        }
      });
    }
  </script>

</body>

</html>
