<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Authorizing Access...</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
</head>

<body class="min-h-screen flex items-center justify-center bg-black/40">
  <div class="bg-white/90 backdrop-blur-md p-6 sm:p-10 rounded-2xl shadow-xl w-full max-w-md text-center">
    <!-- Spinner -->
    <div class="flex justify-center items-center gap-3 mb-3">
      <svg class="animate-spin h-6 w-6 text-green-600" xmlns="http://www.w3.org/2000/svg" fill="none"
        viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v8H4z"></path>
      </svg>
      <p class="text-sm text-gray-700">Authorizing...</p>
    </div>
    <p class="text-xs text-gray-500">This may take a few seconds.</p>
  </div>

  <script>
    lucide.createIcons();

    window.addEventListener("DOMContentLoaded", async () => {
      const transactionId = "{{transactionID}}"; // Will be interpolated server-side

      try {
        const response = await fetch("/authorize/decision", {
          method: "POST",
          headers: {
            "Content-Type": "application/x-www-form-urlencoded"
          },
          body: new URLSearchParams({
            transaction_id: transactionId,
            approve: "yes"
          }),
          redirect: "follow"
        });

        // After POST, OAuth2 server will respond with a redirect
        if (response.ok) {
          window.opener.postMessage(
            {
              type: "OAUTH_COMPLETE",
              fullUrl: response.url
            },
            "*"
          );
          window.close()
        } else {
          document.body.innerHTML = `
            <div class="text-center p-6">
              <h2 class="text-xl font-semibold text-red-600">Authorization Failed</h2>
              <p class="text-gray-700 mt-2">Could not complete authorization.</p>
            </div>
          `;
        }
      } catch (err) {
        console.error("Authorization error:", err);
        document.body.innerHTML = `
          <div class="text-center p-6">
            <h2 class="text-xl font-semibold text-red-600">Network Error</h2>
            <p class="text-gray-700 mt-2">Failed to reach the server. Please try again.</p>
          </div>
        `;
      }
    });
  </script>
</body>

</html>
